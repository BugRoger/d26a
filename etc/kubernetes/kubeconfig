apiVersion: v1
kind: Config
clusters:
  - name: local
    cluster:
       certificate-authority: /etc/kubernetes/ssl/ca.pem
       server: "https://127.0.0.1"
contexts:
  - name: local 
    context:
      cluster: local
      user: local 
current-context: local
users:
  - name: local
    user:
      client-certificate: /etc/kubernetes/ssl/client.pem
      client-key: /etc/kubernetes/ssl/client-key.pem
